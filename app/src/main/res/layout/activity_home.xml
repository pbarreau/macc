<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context=".Home">

    <TextView
        android:id="@+id/textView_classNameHome"
        android:layout_width="126dp"
        android:layout_height="45dp"
        android:layout_marginEnd="204dp"
        android:layout_marginLeft="81dp"
        android:layout_marginRight="204dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:text="Pièce :"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_nameHome" />

    <TextView
        android:id="@+id/textView_screenTitle2_Home"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Télécommande"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView_symbol"
        app:layout_constraintStart_toEndOf="@+id/textView_screenTitle1_Home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_screenTitle1_Home"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Accueil"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_tempNumber_Home"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:text="26"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_classNameHome" />

    <TextView
        android:id="@+id/textView_symbol_Home"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:text="°C"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_tempNumber_Home"
        app:layout_constraintTop_toBottomOf="@+id/textView_classNameHome"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/spinner_clim"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginEnd="111dp"
        android:layout_marginLeft="112dp"
        android:layout_marginRight="111dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="210dp"
        android:background="@android:color/holo_green_light"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar_humidity"
        style="@style/Widget.ProgressBar.Vertical"
        android:layout_width="40dp"
        android:layout_height="200dp"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:color="#fff"
        android:indeterminate="false"
        android:progress="35"
        app:layout_constraintBottom_toTopOf="@+id/downPageApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_clim" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:fontFamily="cursive"
        android:text="Humidité "
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/downPageApp"
        app:layout_constraintStart_toEndOf="@+id/progressBar_humidity" />

    <TextView
        android:id="@+id/textView_humidityPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="35 %"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:fontFamily="cursive"
        app:layout_constraintBottom_toTopOf="@+id/downPageApp"
        app:layout_constraintEnd_toStartOf="@+id/progressBar_humidity" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/downPageApp"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton_homeGraph"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:clickable="true"
            android:tint="@android:color/holo_blue_bright"
            app:backgroundTint="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rippleColor="@android:color/holo_blue_bright"
            app:srcCompat="@mipmap/ic_jlgraph_app_foreground" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton_homeExit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:clickable="true"
            android:tint="@android:color/holo_blue_bright"
            app:backgroundTint="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@android:color/holo_blue_bright"
            app:srcCompat="@android:drawable/ic_notification_clear_all" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView_nameHome"
        android:layout_width="126dp"
        android:layout_height="47dp"
        android:layout_marginEnd="204dp"
        android:layout_marginLeft="81dp"
        android:layout_marginRight="204dp"
        android:layout_marginStart="81dp"
        android:text="Bonjour"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:fontFamily="cursive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_screenTitle1_Home" />

</android.support.constraint.ConstraintLayout>